<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProdutoDialogController">
    <center>
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Código" />
                <TextField fx:id="CampoCodigo" GridPane.columnIndex="1" />
                <Label text="Nome" GridPane.rowIndex="1" />
                <TextField fx:id="CampoNome" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Descrição" GridPane.rowIndex="2" />
                <TextField fx:id="CampoDescricao" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Data Fabricação" GridPane.rowIndex="3" />
                <DatePicker fx:id="CampoDataFabricacao" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Data Validade" GridPane.rowIndex="4" />
                <DatePicker fx:id="CampoDataValidade" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Label text="Preço Compra" GridPane.rowIndex="5" />
                <TextField fx:id="CampoPrecoCompra" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <Label text="Preço Venda" GridPane.rowIndex="6" />
                <TextField fx:id="CampoPrecoVenda" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <Label text="Estoque" GridPane.rowIndex="7" />
                <TextField fx:id="CampoEstoque" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button onAction="#handleOk" text="OK" />
                <Button onAction="#handleCancel" text="Cancelar" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" right="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>